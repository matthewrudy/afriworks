<% url = testimonial.new_record? ? provider_testimonials_path(@provider, testimonial) : testimonial_path(testimonial) %>
<% form_for(testimonial, :url => provider_testimonials_path(testimonial.provider, testimonial)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :from %><br />
    <%= f.text_field :from %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit(testimonial.new_record? ? "Create" : "Update") %>
  </p>
<% end %>