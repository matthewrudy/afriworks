<tr class="proposal <%=h proposal.status %>">
  <td class="status">
    <%= proposal.status %>
  </td>
  <td class="title">
    <% link_to(proposal_path(proposal)) do %>
      <%=h proposal.title %>
    <% end %>
  </td>
  <td class="contract-type">
    <%=h proposal.contract_type %>
  </td>
  <td class="payment-terms">
    <%=h proposal.payment_terms %>
  </td>
  <td class="paperclip-file">
    <%= link_to(proposal.document_file_name, proposal.document.url) if proposal.document? %>
  </td>
  <td class="response-count">
    <% link_to(responses_proposal_path(proposal)) do %>
      <%= proposal.responses.size %> responses
    <% end %>
  </td>
  <td class="actions">
    <% if proposal.draft? || proposal.amend? %>
      <%= link_to("submit", submit_proposal_path(proposal)) %>
    <% end %>
  </td>
</tr>
