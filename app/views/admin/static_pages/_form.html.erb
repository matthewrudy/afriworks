<% form_for([:admin, @static_page]) do |f| %>
  <%= f.error_messages %>

  <% unless @static_page.new_record? %>
    <p>
      <%= f.label :position %>
      <%= f.text_field :position %>
    </p>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <% unless @static_page.new_record? %>
    <p>
      <%= f.label :short_name, "URL" %>
      <span>http://afriworks.com/s/<%= f.text_field :short_name %></span>
    </p>
  <% end %>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body, :class => "wysiwyg" %>
  </p>
  <p>
    <%= f.label :published %>
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.submit(@static_page.new_record? ? "Create" : "Update") %>
  </p>
<% end %>