<% form_for([:admin, @static_page]) do |f| %>
  <%= f.error_messages %>

  <% unless @static_page.new_record? %>
    <p>
      <%= f.label :position %><br />
      <%= f.text_field :position %>
    </p>
  <% end %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <% unless @static_page.new_record? %>
    <p>
      <%= f.label :short_name %><br />
      <%= f.text_field :short_name %>
    </p>
  <% end %>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => "wysiwyg" %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>

  <p>
    <%= f.submit(@static_page.new_record? ? "Create" : "Update") %>
  </p>
<% end %>